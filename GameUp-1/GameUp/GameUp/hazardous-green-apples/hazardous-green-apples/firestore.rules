rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: authenticated users can read any user (for leaderboard, add friend),
    // but only create/update/delete their own document
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // UserStats collection: authenticated users can read any (for leaderboard),
    // but only create/update/delete their own stats
    match /userStats/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
